<%- include('../partials/header') %>


  <style>
    h1 {
      text-align: left;
      margin-bottom: 5rem;
      margin-top: 5%;
      margin-bottom: 5%;
      font-size: 30px;
      margin-left: 30px;
    }
    .personal-info {
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      width: 60%;
      margin-left: 20%;
    }
    .body-info {
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      width: 70%;
      margin-left: 15%;
      margin-top: 3%;
      margin-bottom: 15%;
    }
    label {
      display: block;
      margin-top: 1rem;
      font-size: 25px;
    }
    input, select {
      width: 100%;
      padding: 0.5rem;
      margin-top: 0.25rem;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
      font-size: 30px;
    }
    button {
      margin-top: 1.5rem;
      width: 30%;
      padding: 0.75rem;
      background-color: #28a745;
      border: none;
      color: white;
      font-size: 1rem;
      border-radius: 24px;
      cursor: pointer;
      font-size: 40px;
      margin-left: 35%;
    }
    button:hover {
      background-color: #218838;
    }

    .weight {
      max-width: 90%;
      margin: 20px auto;
      padding: 20px;
      background-color: #f4f8fb;
      border: 1px solid #cbd5e0;
      border-radius: 10px;
      font-family: Arial, sans-serif;
    }

    .weight label {
      display: block;
      font-weight: bold;
      margin-bottom: 8px;
      color: #2d3748;
    }

    .weight input[type="number"] {
      width: 10%;
      padding: 10px;
      font-size: 30px;
      border: 1px solid #a0aec0;
      border-radius: 5px;
      box-sizing: border-box;
      margin-bottom: 3%;
    }

    .weight p {
      font-size: 14px;
      color: #4a5568;
      margin-top: 5px;
    }

    @media (max-width: 600px) {
      form {
        padding: 1rem;
      }
      input, select, button {
        font-size: 20px;
      }
    }
  </style>
<h1>Update Your Profile</h1>
  <form method="POST" action="/profile/update">
    <div class="personal-info">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" value="<%= user.name || '' %>" />

      <label for="age">Age</label>
      <input type="number" id="age" name="age" min="10" max="120" value="<%= user.age || '' %>" required />

      <label for="gender">Gender</label>
      <select id="gender" name="gender" required>
        <option value="">Select gender</option>
        <option value="male" <%= user.gender === 'male' ? 'selected' : '' %>>Male</option>
        <option value="female" <%= user.gender === 'female' ? 'selected' : '' %>>Female</option>
      </select>

      <label for="height">Height (cm)</label>
      <input type="number" id="height" name="height_cm" min="50" max="250" value="<%= user.height_cm || '' %>" required />
    </div>

    <div class="weight">
      <label for="weight">Weight (kg)</label>
      <input type="number" id="weight" name="weight_kg" min="20" max="300" value="<%= user.weight_kg || '' %>" required />
      <p>Note: Update your weight every week to calculate your daily calorie needs accurately.
      </p>
    </div>

    <div class="body-info">
      
      <label for="activityLevel">Activity Level</label>
      <select id="activityLevel" name="activity_level" required>
        <option value="">Select activity level</option>
        <option value="sedentary" <%= user.activity_level === 'sedentary' ? 'selected' : '' %>>Sedentary (little or no exercise)</option>
        <option value="light" <%= user.activity_level === 'light' ? 'selected' : '' %>>Lightly active (1-3 days/week)</option>
        <option value="moderate" <%= user.activity_level === 'moderate' ? 'selected' : '' %>>Moderately active (3-5 days/week)</option>
        <option value="very" <%= user.activity_level === 'very' ? 'selected' : '' %>>Very active (6-7 days/week)</option>
        <option value="extra" <%= user.activity_level === 'extra' ? 'selected' : '' %>>Extra active (very hard exercise/job)</option>
      </select>

      <label for="goal">Fitness Goal</label>
      <select id="goal" name="goal" required>
        <option value="">Select goal</option>
        <option value="lose_fat" <%= user.goal === 'lose_fat' ? 'selected' : '' %>>Lose Fat</option>
        <option value="build_muscle" <%= user.goal === 'build_muscle' ? 'selected' : '' %>>Build Muscle</option>
        <option value="maintain" <%= user.goal === 'maintain' ? 'selected' : '' %>>Maintain Weight</option>
        <option value="endurance" <%= user.goal === 'endurance' ? 'selected' : '' %>>Improve Endurance</option>
      </select>

      <label for="dietaryPreferences">Dietary Preferences / Restrictions</label>
      <input type="text" id="dietaryPreferences" name="dietary_preferences" value="<%= user.dietary_preferences || '' %>" placeholder="E.g. vegetarian, gluten-free, allergies..." />

      <label for="trainingFrequency">Training Frequency (times per week)</label>
      <input type="number" id="trainingFrequency" name="training_frequency" min="0" max="14" value="<%= user.training_frequency || '' %>" required />

    </div>
    <button type="submit">Save Profile</button>
  </form>

<%- include('../partials/footer') %>
